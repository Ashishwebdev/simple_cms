<%= link_to("Back to page",'/page',:class=> 'action index')%>

<div class="testings new">
	<h2>Edit page</h2>

	<%= form_for :page ,:url => {:action => "update"},:method =>'patch' do |t| %>
	<table summary= " page form fields">
		<tr>
			<th>Name</th>
			<td><%= t.text_field(:Name) %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= t.text_field(:position) %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= t.text_field(:visible) %></td>
		</tr>
	</table>
	<div class="form-buttons">
		<button type="submit" > Submit</button>

	</div>
<% end %>
</div>