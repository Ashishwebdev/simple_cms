<div class="subjects index">
	<h2>Pages</h2>

	<%= link_to("Add New Example",'/page/new', :class => 'action new') %>
	<table class = "listing" summary="Example list">
		<tr class="header">
			<th>#</th>
			<th>Name</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<%  @pages.each do |page| %>
 		<tr>
 			<td><%= page.position %></td>
 			<td><%= page.Name %></td>
 			<td class="center"><%= page.visible ? 'yes' : 'No' %></td>
 			<td class="actions">
 				<%= link_to("Show",{:controller => 'page',:action=> 'show',:id=>page.id}, :class => 'action show') %>
 				<%= link_to("Edit", {:controller => 'page',:action=>'edit',:id=>page.id}, :class => 'action edit') %>
 				<%= link_to("Delete", {:controller => 'page',:action=>'delete',:id=>page.id}, :class => 'action delete') %>
            </td>

 		</tr>	
		<%end%>

	</table>
</div>